    div.form-group 
        label.peacockAttr(for='peacock_species') peacock_species 
        input#peacock_species(type='text', name='peacock_species') 
    div.form-group 
        label.peacockAttr(for='feather_color') feather_color  
        input#feather_color(type='text', name='feather_color') 
    div.form-group 
        label.peacockAttr(for='age') peacock age  
        input#age(type='number', name='age') 
    input(type="submit") 
 
