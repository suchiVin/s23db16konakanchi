extends layout

block content
  - let peacocks  = results
  h1= title
  div(class="container-fluid")
  div(class="row m-1")
    each peacock  in peacocks 
      - let destination = `dispatch(\"/peacock/update?id=${peacock._id}\")`
      div(class="row-sm-2", class="m-1") Peacock #{peacock.peacock_species}(#{peacock.feather_color}) is #{peacock.age} 
        button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }